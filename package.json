{
  "name": "hapi-moon",
  "version": "1.0.0",
  "description": "Simple yet powerful hassle-free hapi.js Server boilerplate",
  "main": "server.js",
  "scripts": {
    "test": "lab -m 5000 -c -t 70 -a code --coverage-exclude app/models --coverage-exclude config",
    "add-user": "node commands/create-user.js",
    "generateMacroData": "NODE_ENV=production NODE_CONFIG_DIR=server/config node server/scripts/generate-macro-data.js",
    "backupManager": "NODE_ENV=production NODE_CONFIG_DIR=server/config node server/scripts/backup-manager.js"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:metoikos/hapi-moon.git"
  },
  "keywords": [
    "hapi",
    "hapijs",
    "mongoose",
    "boilerplate",
    "api",
    "authentication",
    "redis",
    "cache",
    "server"
  ],
  "author": "Yılmaz Uğurlu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/metoikos/hapi-moon/issues"
  },
  "homepage": "https://github.com/metoikos/hapi-moon#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "boom": "^7.3.0",
    "catbox-redis": "^4.2.4",
    "config": "^3.0.1",
    "crumb": "^7.2.3",
    "glob": "^7.1.3",
    "glue": "^6.0.0",
    "hapi": "^18.0.1",
    "hoek": "^6.1.2",
    "joi": "^14.3.1",
    "mongoose": "^5.4.8",
